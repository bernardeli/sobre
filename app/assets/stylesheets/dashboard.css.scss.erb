.header-sobre{
  background: #DDD;
  border-top: 10px solid #B7002E;
  border-bottom: 2px solid #C2C6CB;
  overflow: hidden;
  img{
    margin: 5px 0;
    float: left;
  }
  .user-details{
    color: #333;
    float: right;
    font-size: 13px;
    margin-bottom: 3px;
    margin-top: 3px;
    a{
      color: #346FD7;
      font-size: 13px;
      &:hover{
       text-decoration: none;
      }
    }
  }
  .user-page{
    clear: right;
    float: right;
    a{
      color: #595A5D;
      font-size: 20px;
      text-decoration: none;
      &:hover{
        text-decoration: underline;
      }
    }
    span{
      color: #9F9E9E;
    }
  }
}

p.personalize{
  color: #B7002E;
  font-size: 24px;
  margin: 20px 0;
  span{
    color: #9F9E9E;
    display: block;
    font-size: 16px;
  }
}

div.user-page-box{
  padding-bottom: 100px;
  .align-user-page{
    border: 13px solid #3E4043;
    margin: 0 auto;
    width: 960px;
    .align-center{
      width: 930px;
    }
  }
}

.choose-template{
  background: #DDD;
  border: 8px solid #959292;
  color: #5D5C5C;
  font-size: 22px;
  font-weight: bold;
  padding: 5px 10px;
  position: absolute;
  right: -48px;
  top: 200px;

  -webkit-transform:rotate(-90deg);
  -moz-transform:rotate(-90deg);
  -o-transform:rotate(-90deg);
  /* filter:progid:DXImageTransform.Microsoft.BasicImage(rotation=1.5); */
  -ms-transform:rotate(-90deg);
}

footer{
  background: #898989;
  color: #FFF;
  font-size: 12px;
  line-height: 27px;
  text-align: center;
}

.edit_page{
  position: relative;
  button.shiny-blue {
    float: right;
    font-size: 16px;
    margin-right: -14px;
    margin-top: 25px;
  }
  .editable-hover{
    position: relative;
    &:hover{
      border: 1px dashed #B7002E;
      cursor: pointer;
    }
  }

}

.editable-box{
  background: #FFF;
  border-top: 3px solid #B7002E;
  color: #616161;
  height: 40px;
  line-height: 40px;
  margin-top: 1px;
  padding: 0 40px 0 20px;
  position: absolute;
  width: 500px;
  z-index: 100;
  span.seta{
    background: url(<%= asset_path('seta-input-user-editable.png') %>);
    display: block;
    height: 8px;
    left: 16px;
    position:absolute;
    width: 10px;
    top: -11px;
  }
  label{
    float: left;
    font-size: 16px;
    margin-right: 10px;
  }
  input{
    border: 1px solid #D1D1D1;
    font-family: arial;
    font-size: 15px;
    font-weight: normal;
    height: 15px;
    margin-bottom: 10px;
    padding: 5px;
    width: 75%;
  }
  .shiny-blue{
    font-size: 13px !important;
    height: 28px;
    margin-top: 6px !important;
    padding: 0;
    width: 50px;
  }
}

.sub-titulo .editable-box{
  input{
    display: block;
    margin-top: 7px;
  }
  button{margin-top: -38px !important;}
}

.twitter-input, .facebook-input, .orkut-input, .linkedin-input, .address-input, .phone-input, .email-input{
  margin-left: -330px;
  margin-top: 90px;
  width: 350px;
  span.seta{
    left: 91%;
  }
  input{
    display: block;
    float: left;
    margin-top: 7px;
    width: 61%;
  }
}

.facebook-input{margin-left: -235px;}
.orkut-input{margin-left: -145px;}
.linkedin-input{margin-left: -58px;}

.description-input{
  border-left: 3px solid #B7002E;
  border-top: 0 none;
  height: 282px;
  margin-left: 585px;
  padding-right: 0;
  width: 320px;
  span.seta{
    background: url(<%= asset_path('seta-input-user-editable-left.png') %>);
    height: 10px;
    left: -11px;
    width: 8px;
    top: 11px;
  }
  label{
    display: block;
    float: none;
  }
  textarea{
    display: block;
    height: 200px;
    width: 300px;
  }
  button.shiny-blue{
    float: none;
    margin-left: 253px;
  }
}


.address-input, .phone-input, .email-input{
  margin-top: 3px;
  width: 400px;
  input{
    width: 70%;
  }
}


