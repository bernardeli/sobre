.header-sobre{
  background: #DDD;
  border-top: 10px solid #B7002E;
  border-bottom: 2px solid #C2C6CB;
  overflow: hidden;
  img{
    margin: 5px 0;
    float: left;
  }
  .user-details{
    color: #333;
    float: right;
    font-size: 13px;
    margin-bottom: 3px;
    margin-top: 3px;
    a{
      color: #346FD7;
      font-size: 13px;
      &:hover{
       text-decoration: none;
      }
    }
  }
  .user-page{
    clear: right;
    float: right;
    a{
      color: #595A5D;
      font-size: 20px;
      text-decoration: none;
      &:hover{
        text-decoration: underline;
      }
    }
    span{
      color: #9F9E9E;
    }
  }
}

p.personalize{
  color: #B7002E;
  font-size: 24px;
  margin: 20px 0;
  span{
    color: #9F9E9E;
    display: block;
    font-size: 16px;
  }
}

div.user-page-box{
  padding-bottom: 100px;
  .align-user-page{
    border: 13px solid #3E4043;
    margin: 0 auto;
    width: 960px;
    .align-center{
      width: 930px;
    }
  }
}

footer{
  background: #898989;
  color: #FFF;
  font-size: 12px;
  line-height: 27px;
  text-align: center;
}

.edit_page{
  position: relative;
  button.shiny-blue {
    float: right;
    font-size: 16px;
    margin-right: -14px;
    margin-top: 25px;
  }
  .editable-hover:hover{
    border: 1px dashed #B7002E;
    cursor: pointer;
  }
}

