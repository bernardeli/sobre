.theme-02 {
  background: #CACACA url(<%= asset_path("theme-02/body-background-filete.png") %>) center top repeat-x;
  font-family: Tahoma;

  .align-center{
    width: 760px;
  }

  .all-content{
    background: url(<%= asset_path("theme-02/body-background.png") %>) center top no-repeat;
  }
  header.titulo .align-center{
    width: 800px;
  }

  header.titulo h2{
    color: #870000;
    font-size: 36px;
    padding-top: 40px;
  }

  header.sub-titulo h3{
    color: #FFF;
    font-size: 22px;
    margin-top: 10px;
  }

  article{
    color: #FFF;
  }

  .content{
    min-height: 340px;
  }

  p.description{
    margin-top: 10px;
    height: 100px;
    overflow: hidden;
  }

  aside.address span.email{display: none;}
  aside.address span.email-client{
    color: #B1B1B1;
    display: block;
    font-size: 30px;
  }

  section.network{
    margin: 135px auto 0 auto;
    width: 400px;
  }

  section.network h4{
    color: #4A4A4A;
    font-size: 14px;
    margin-left: 495px;
    position: absolute;
    top: 30px;
  }

  section.address{
    float: left;
    margin-left: 57px;
    margin-top: -180px;
    width: 657px;
    text-align: center;
  }

  section.address .telephone{
    display: none;
  }

  section.address .telephone-client{
    color: #252525;
    font-size: 30px;
    margin-left: 193px;
    position: absolute;
    top: 45px;
  }

  section.address address{
    display: none;
  }

  footer p{
    color: #464646;
    font-size: 14px;
    text-align: center;
  }
}
