.theme-01{
  font-family: Tahoma;

  .all-content{
    background: #E9E9E7;
  }

  header.titulo{
    background: url(<%= image_path("theme-01/header-background.png") %>) repeat-x;
    height: 155px;
  }
  header.titulo h2{
    color: #6B9DB8;
    font-size: 65px;
  }

  header.sub-titulo{
    color: #464646;
    font-size: 35px;
    margin: -65px 0 30px 0;
  }

  section.content{
    background: url(<%= image_path("theme-01/content-background.png") %>) repeat-x;
    height: 235px;
    padding-top: 15px;
  }

  article p.description{
    color: #FFF;
    float: left;
    height: 195px;
    overflow: hidden;
    width: 570px;
  }

  aside section{
    float: right;
    margin: 30px 0 0 0;
  }

  section.address-content{
    color: #FFF;
    margin-top: 20px;
    width: 340px;
  }

  section.address-content span.e-mail,
  section.address-content span.telephone,
  section.address-content span.endereco
  {
    font-weight: bold;
  }

  .email { color: white; }

  footer p{
    color: #464646;
    font-size: 14px;
    text-align: center;
  }
}
