/** Rodapé sempre embaixo **/
html,
body{
  margin:0;
  padding:0;
  height:100%;
}

.all-content{
  background: #DDD url(<%= asset_path('body-background.png') %>) repeat-x;
  min-height:100%;
  position:relative;
}

section.faixa{
  background: #B7002E;
  border-top: 1px solid #DDD;
  color: #FFF;
  height: 29px;
  line-height: 29px;
  padding-right: 20px;
  text-align: right;
}

.video{
  background: url(<%= asset_path('fundo-video.png') %>) no-repeat;
  float: left;
  height: 419px;
  width: 619px;
}

.content{
  padding-bottom: 40px;   /* Mesma Altura do Rodapé */
}

.form_registration{
  color: #676767;
  float: right;
  width: 375px;
  p{
    font-size: 20px;
    margin: 40px 0 60px 0;
    text-align: justify;
  }
  form{
    label{display: none;}
    input[type="text"], input[type="password"], input[type="email"]{
      border: 1px solid #D1D1D1;
      font-family: arial;
      font-size: 15px;
      font-weight: normal;
      height: 30px;
      margin-bottom: 10px;
      padding: 5px;
      width: 96%;
    }
    button.shiny-blue {
      background-color: #5284E4;
      background-image: -moz-linear-gradient(center top , #5284E4 0%, #376FE0 50%, #1A5AD9 50%, #2463DE 100%);
      border-color: #1F58CC #1B4DB3 #174299;
      border-radius: 4px 4px 4px 4px;
      border-style: solid;
      border-width: 1px;
      box-shadow: 0 0 2px 0 rgba(57, 140, 255, 0.8) inset;
      color: #FFFFFF;
      float: right;
      font: bold 12px "helvetica neue",helvetica,arial,sans-serif;
      padding: 7px 0;
      text-shadow: 0 -1px 1px #1A5AD9;
      width: 150px;
    }
  }
  a{
    color: #676767;
    font-size: 13px;
    text-decoration: none;
    &:hover{
      text-decoration: underline;
    }
  }
}

.bullets{
  clear: both;
  li{
    float: left;
    font-size: 20px;
    margin: 50px 50px 50px 0;
    width: 300px;
  }
}

footer{
  background: #898989;
  bottom:0;
  color: #FFF;
  font-size: 13px;
  height: 27px;   /* Mesma Altura do Rodapé */
  line-height: 27px;
  position:absolute;
  width:100%;
  text-align: center;
}

a.trigger-form {
  position: absolute;
  text-decoration: none;
  top: 80px; right: 0;
  font-size: 16px;
  letter-spacing:-1px;
  font-family: verdana, helvetica, arial, sans-serif;
  color:#fff;
  padding: 20px 15px 20px 40px;
  font-weight: 700;
  background: #333333;
  border:1px solid #444444;
  -moz-border-radius-topleft: 20px;
  -webkit-border-top-left-radius: 20px;
  -moz-border-radius-bottomleft: 20px;
  -webkit-border-bottom-left-radius: 20px;
  -moz-border-radius-bottomright: 0px;
  -webkit-border-bottom-right-radius: 0px;
  display: block;
  z-index: 999;
}

a.trigger-form:hover{
  position: absolute;
  text-decoration: none;
  top: 80px; right: 0;
  font-size: 16px;
  letter-spacing:-1px;
  font-family: verdana, helvetica, arial, sans-serif;
  color:#fff;
  padding: 20px 20px 20px 40px;
  font-weight: 700;
  border:1px solid #444444;
  -moz-border-radius-topleft: 20px;
  -webkit-border-top-left-radius: 20px;
  -moz-border-radius-bottomleft: 20px;
  -webkit-border-bottom-left-radius: 20px;
  -moz-border-radius-bottomright: 0px;
  -webkit-border-bottom-right-radius: 0px;
  display: block;
}

#page-form {
  position: absolute;
  top: 50px;
  right: 0;
  display: none;
  background: #000000;
  border:1px solid #111111;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  -webkit-border-radius: 20px;
  width: 80px;
  height: auto;
  padding: 30px 130px 30px 30px;
  filter: alpha(opacity=85);
  opacity: .85;
  z-index: 999;
}

#page-form p{
  margin-bottom: 15px;
  color: #cccccc;
}

#page-form a, #page-form a:visited{
  margin: 0;
  padding: 0;
  color: #9FC54E;
  text-decoration: none;
  border-bottom: 1px solid #9FC54E;
}

#page-form a:hover, #page-form a:visited:hover{
  margin: 0;
  padding: 0;
  color: #ffffff;
  text-decoration: none;
  border-bottom: 1px solid #ffffff;
}

p.save {
  background: url(<%= asset_path('loading.gif') %>) no-repeat;
  text-indent: -5555em;
}
