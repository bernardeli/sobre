= form_for current_user.page, :method => :put do |f|
  %header.titulo
    .align-center
      %h2.title.editable-hover.tooltip{ :title => "Click para editar" }= resource.page.title
      .editable-box{ :style => "display:none" }
        = f.text_field :title

  %header.sub-titulo
    .align-center
      %h3.subtitle.editable-hover.tooltip{ :title => "Click para editar" }= resource.page.subtitle
      = f.text_field :subtitle, :style => 'display:none'

  %section.content
    %article
      .align-center
        %p.description.editable-hover.tooltip{ :title => "Click para editar" }= resource.page.description.gsub("\n", "<br />").html_safe
        = f.text_area :description, :style => 'display:none'

    %aside.network
      .align-center
        %section.network
          = link_to 'linkedin', '#', :class => 'linkedin editable-hover tooltip', :title => "Click para editar"
          = f.text_field :linkedin, :style => 'display:none'
          = link_to 'orkut', '#', :class => 'orkut editable-hover tooltip', :title => "Click para editar"
          = f.text_field :orkut, :style => 'display:none'
          = link_to 'facebook', '#', :class => 'facebook editable-hover tooltip', :title => "Click para editar"
          = f.text_field :facebook, :style => 'display:none'
          = link_to 'twitter', '#', :class => 'twitter editable-hover tooltip', :title => "Click para editar"
          = f.text_field :twitter, :style => 'display:none'

    %aside.address-content
      .align-center
        %section.address-content
          %p.email-layer{:style => resource.page.email.blank? ? 'display:none' : ''}
            %span.e-mail
              Email:
            %span.email-client.editable-hover.tooltip{ :title => "Click para editar" }
              = mail_to(resource.page.email, nil, :class => 'email')
            = f.text_field :email, :style => 'display:none'
          %p.phone-layer{:style => resource.page.phone.blank? ? 'display:none' : ''}
            %span.telephone
              Telefone:
            %span.email-client.phone.editable-hover.tooltip{ :title => "Click para editar" }
              = resource.page.phone
            = f.text_field :phone, :style => 'display:none'
          %address.address-layer{:style => resource.page.address.blank? ? 'display:none' : ''}
            %span.endereco
              EndereÃ§o:
            %span.endereco-client.address.editable-hover.tooltip{ :title => "Click para editar" }
              = resource.page.address
            = f.text_field :address, :style => 'display:none'

  %button.shiny-blue Publicar