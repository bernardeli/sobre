.contact-page
  %h4 Entre em contato
  .flashes
  = form_tag dispatch_email_path, :method => :post, :remote => true do
    = label_tag 'contact_name', 'Nome'
    = text_field_tag 'contact[name]', nil, :placeholder => "Seu Nome", :class => "required"

    = label_tag 'contact_email', 'Email'
    = text_field_tag 'contact[email]', nil, :placeholder => 'E-mail', :class => "required"

    = label_tag 'contact_message', 'Mensagem'
    = text_area_tag 'contact[message]', nil, :placeholder => 'Sua Mensagem', :class => "required"

    %button{:class => "shiny-blue"}
      Enviar
